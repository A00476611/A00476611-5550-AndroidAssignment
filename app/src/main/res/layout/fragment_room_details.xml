<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/RoomDetailCard"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/DetailsRoomImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/RoomDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                style="@style/TextAppearance.Material3.DisplaySmall"
                android:layout_marginTop="10dp"
                android:text="Mariott"/>
            <TextView
                android:id="@+id/RoomDetailHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:text="Mariott"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/RoomDetailBedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:text="Mariott"/>
                <TextView
                    android:id="@+id/RoomDetailPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:text="Mariott"
                    android:layout_marginStart="20dp"/>
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/AddGuestsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RoomDetailCard"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:text="Add Guests"/>
        <LinearLayout
            android:id="@+id/GuestCountList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/AddGuestsText"/>
            <Button
                android:id="@+id/BookButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/GuestCountList"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Book"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
